	</head>
	<body>
		<%- include('../partials/nav.ejs') %>
		<main>
            <section class="main">
			<!-- restaurant details -->
				<button onclick="history.back(-1)">Back</button>
				<section class="restaurant-img">
					<img
						class="restaurant-img"
						src="<%= restaurant.image_url %>"
						alt="<%= restaurant.name %>"
					/>
				</section>
