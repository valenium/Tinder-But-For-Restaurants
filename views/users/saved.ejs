<%- include('../partials/header.ejs') %>

<% let likeCount = {} %>
<% user.likes.forEach(like => likeCount[like.like] = (likeCount[like.like] || 0) + 1) %>
<% if(likeCount['Save'] > 0) { %>
    <% user.likes.forEach(function(like) { %>
        <% if(like.like === 'Save') {%>
        <div class="restaurant">
            <a href='/restaurants/<%=like.restaurant._id%>/reviews'><%= like.restaurant.name %></a>
        </div>
        <% } %>
    <% }) %>
        <div class="main-buttons">
            <button style="width: 13rem;" onclick="history.back(-1)">Back</button> 
            <a href="/users/<%=user._id%>/saved/edit"><button style="width: 13rem;">Edit Saved Restaurants</button></a>
        </div>
<% } else { %>
    <p>You haven't saved any restaurants to look at later!</p>
<% } %>

